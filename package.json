{
  "name": "dhg-monorepo",
  "private": true,
  "packageManager": "pnpm@9.15.3",
  "scripts": {
    "dev": "turbo run dev",
    "frontend": "./scripts/start-frontend.sh",
    "build": "pnpm --filter './apps/*' build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "backend": "cd backend && uvicorn core.app:app --reload --port 8000 --log-level debug --host 0.0.0.0",
    "backend:sync": "cd backend && uv pip sync requirements.frozen.txt",
    "setup": "./scripts/setup/init-workspace.sh",
    "turbo-ignore": "node -e \"process.exit(require('turbo').shouldOptimize(__dirname))\""
  },
  "devDependencies": {
    "@vercel/node": "^5.0.2",
    "turbo": "latest"
  }
}
